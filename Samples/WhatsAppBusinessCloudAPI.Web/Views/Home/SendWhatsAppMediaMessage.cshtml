@model SendMediaMessageViewModel
@{
	ViewData["Title"] = "Send WhatsApp Media Message Page";
}

<div class="text-center">
	<h1 class="display-4">Send WhatsApp Media Message</h1>
</div>
<div class="row">
	<form asp-action="SendWhatsAppMediaMessage">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label class="control-label">Recipient Phone Number</label>
			<input asp-for="RecipientPhoneNumber" class="form-control" />
			<span asp-validation-for="RecipientPhoneNumber" class="form-control" />
		</div>
		<div class="form-group">
			<label class="control-label">Message</label>
			<input asp-for="Message" class="form-control" />
			<span asp-validation-for="Message" class="form-control" />
		</div>
		<div class="form-group">
			<label class="control-label">Media Type</label>
			<select class="form-control form-select form-select-lg mb-3" asp-for="SelectedMediaType" asp-items="@Model.MediaType"></select>
			<span asp-validation-for="SelectedMediaType" class="form-control" />
		</div>
		<div class="form-group">
			<label class="control-label">Media Url</label>
			<input asp-for="MediaLink" class="form-control" />
			<span asp-validation-for="MediaLink" class="form-control" />
		</div>
		<div class="form-group">
			<label class="control-label">Media Id</label>
			<input asp-for="MediaId" class="form-control" />
			<span asp-validation-for="MediaId" class="form-control" />
		</div>
		<div class="form-group">
			<input type="submit" value="Send Message" class="btn btn-primary" />
		</div>
	</form>
</div>
